<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/shape_chat_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/complex_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="2"
            android:fontFamily="@font/donegal_one"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:text="Complex Name "
            android:textColor="#121111"
            android:textSize="@dimen/_25sdp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="#c0c0c0"
            android:padding="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/allerta"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="SPORT"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/history_sport_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/donegal_one"
            android:layout_weight="1"
            android:paddingStart="@dimen/_5sdp"
            android:text="Sport"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="#121111"
            android:textSize="@dimen/_15sdp"
            tools:ignore="RtlSymmetry"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/allerta"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="BOOKED ON"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/history_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/donegal_one"
            android:layout_weight="1"
            android:paddingStart="@dimen/_5sdp"
            android:text="Sport"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="#121111"
            android:textSize="@dimen/_15sdp"
            tools:ignore="RtlSymmetry"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/allerta"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="TOTAL AMOUNT"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/history_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/donegal_one"
            android:layout_weight="1"
            android:paddingStart="@dimen/_5sdp"
            android:text="Sport"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textColor="#121111"
            android:textSize="@dimen/_15sdp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>